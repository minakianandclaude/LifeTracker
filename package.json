{
	"name": "lifetracker",
	"version": "0.1.0",
	"private": true,
	"packageManager": "bun@1.3.6",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"typecheck": "turbo typecheck",
		"test": "turbo test",
		"test:unit": "vitest run",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"test:e2e": "playwright test",
		"test:coverage": "vitest run --coverage",
		"clean": "turbo clean",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"biome check --write"
		],
		"*.prisma": [
			"bunx prisma format"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@playwright/test": "^1.57.0",
		"@vitest/coverage-v8": "^4.0.17",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.0.0",
		"typescript": "^5.3.0",
		"vitest": "^4.0.17"
	}
}
